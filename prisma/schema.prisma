generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String     @unique
  password String
  schedule schedule[]
}

model schedule {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  dia        String
  horaInicio String
  horaFim    String
  horarioId  String @db.ObjectId
  horario    User   @relation(fields: [horarioId], references: [id])
}
